<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24293E"
    tools:context=".ui.activity.Login_Activity">

    <LinearLayout
        android:background="@drawable/circle"
        android:layout_width="112dp"
        android:layout_height="93dp"
        android:layout_marginLeft="300dp">

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/circal2"
        android:layout_width="112dp"
        android:layout_height="93dp"
        android:layout_marginTop="640dp" android:layout_marginRight="300dp">

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Let's Sign You In"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="37dp"
                android:layout_height="55dp"
                android:background="#AE3E4563"
                android:src="@drawable/mail" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:background="@drawable/text_background_shape"
                android:gravity="center"
                android:text="Sign Up With Email"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="37dp"
                android:layout_height="55dp"
                android:background="#AE3E4563"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:background="@drawable/text_background_shape2"
                android:gravity="center"
                android:text="Sign Up With Google"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/loginbtn"
            style="@style/Widget.Material3.Button"
            android:layout_width="286dp"
            android:layout_height="71dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#8EBBFF"
            android:shadowRadius="20"
            android:text="Log In"
            android:textColor="@color/white"
            android:textSize="27sp" />

    </LinearLayout>

</RelativeLayout>