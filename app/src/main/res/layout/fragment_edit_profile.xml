<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    android:paddingEnd="20dp"
    tools:context=".ui.profile.editProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:animateLayoutChanges="true"
        android:background="#24293E"
        android:elevation="10dp"
        android:gravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnback"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="40dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#24293E"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:paddingStart="5dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_usr"
        android:layout_width="90dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_gravity="center"
        android:layout_height="90dp">
    </de.hdodenhof.circleimageview.CircleImageView>
    <View
        android:layout_width="20dp"
        android:layout_height="10dp" />
    <TextView
        android:id="@+id/txtusrnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center_vertical"
        android:text="Zara"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="#F4F5FC"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit avatar"
        android:layout_gravity="center"
        android:textColor="@color/light_blue"
        android:textSize="16sp" />
    <View
        android:layout_width="0dp"
        android:layout_height="40dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/lblemail"
        android:layout_width="68dp"
        android:layout_height="29dp"
        android:gravity="start"
        android:padding="5dp"
        android:text="Email"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible"/>
    <EditText
        android:id="@+id/txteditemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:singleLine="true"
        android:fontFamily="@font/montserrat"
        android:padding="16dp"
        android:hint="Email"

        android:textColorHint="@android:color/darker_gray"/>
    <View
        android:layout_width="0dp"
        android:layout_height="10dp" />
    <TextView
        android:id="@+id/lblbio"
        android:layout_width="68dp"
        android:layout_height="29dp"
        android:gravity="start"
        android:padding="5dp"
        android:text="Bio"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/txteditbio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:hint="Bio"
        android:inputType="text"
        android:maxLines="5"
        android:padding="16dp"
        android:singleLine="false"
        android:textColorHint="@android:color/darker_gray" />
    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btnedit"
        style="@style/Widget.Material3.Button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#8EBBFF"
        android:shadowRadius="20"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>