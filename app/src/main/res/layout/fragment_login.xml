<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24293E"
    tools:context=".ui.login.LoginFragment">

    <LinearLayout
        android:layout_width="86dp"
        android:layout_height="62dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-54dp"
        tools:layout_editor_absoluteY="-79dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Let's Sign You In"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/text_background_shape"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#AE3E4563"
                android:src="@drawable/mail" />

            <TextView
                android:layout_width="264dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Sign Up With Email"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/text_background_shape2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="46dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#AE3E4563"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="272dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Continue with Google"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/loginbtn"
            style="@style/Widget.Material3.Button"
            android:layout_width="247dp"
            android:layout_height="53dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#8EBBFF"
            android:shadowRadius="20"
            android:text="Log In"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="172dp"
            android:background="@drawable/circal2"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>